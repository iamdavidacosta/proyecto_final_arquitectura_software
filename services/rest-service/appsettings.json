{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "super-secret-key-for-jwt-token-generation-minimum-32-characters",
    "Issuer": "file-share-platform",
    "Audience": "file-share-users"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin123@mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/?replicaSet=rs0",
