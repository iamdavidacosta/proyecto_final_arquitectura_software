{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MySqlConnection": "Server=proxysql;Port=6033;Database=fileshare_files;User=app_user;Password=app_password;AllowLoadLocalInfile=true;"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin123",
    "Exchange": "file-exchange",
    "RoutingKey": "file.uploaded"
  },
  "Jwt": {
    "Secret": "super-secret-key-for-jwt-token-generation-minimum-32-characters",
    "Issuer": "file-share-platform",
    "Audience": "file-share-users"
  },
  "Consul": {
    "Host": "http://consul:8500",
    "ServiceName": "file-ingestion-service",
    "ServiceHost": "file-ingestion-service",
    "ServicePort": 80
  },
  "OpenTelemetry": {
    "Endpoint": "http://otel-collector:4317"
  },
  "FileUpload": {
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".txt", ".jpg", ".jpeg", ".png", ".gif", ".zip"],
    "UploadPath": "/app/uploads"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
