# ===========================================
# PROYECTO FINAL - ARQUITECTURA DE SOFTWARE
# Monorepo de Microservicios
# ===========================================

# GENERAL
COMPOSE_PROJECT_NAME=file-share-platform
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-here
JWT_ISSUER=file-share-platform
JWT_AUDIENCE=file-share-users
JWT_EXPIRATION_MINUTES=60

# MySQL Configuration (Writer)
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=fileshare_db
MYSQL_USER=fileshare_user
MYSQL_PASSWORD=fileshare_pass123
MYSQL_WRITER_HOST=mysql-writer
MYSQL_WRITER_PORT=3306

# MySQL Replicas
MYSQL_REPLICA1_HOST=mysql-replica1
MYSQL_REPLICA2_HOST=mysql-replica2
MYSQL_REPLICATION_USER=repl_user
MYSQL_REPLICATION_PASSWORD=repl_pass123

# ProxySQL
PROXYSQL_ADMIN_USER=admin
PROXYSQL_ADMIN_PASSWORD=admin123
PROXYSQL_MONITOR_USER=monitor
PROXYSQL_MONITOR_PASSWORD=monitor123

# MongoDB
MONGO_INITDB_ROOT_USERNAME=mongo_admin
MONGO_INITDB_ROOT_PASSWORD=mongo_pass123
MONGO_DATABASE=fileshare_metadata
MONGO_CONNECTION_STRING=mongodb://mongo_admin:mongo_pass123@mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/?replicaSet=rs0&authSource=admin

# RabbitMQ
RABBITMQ_DEFAULT_USER=rabbitmq_user
RABBITMQ_DEFAULT_PASS=rabbitmq_pass123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# MinIO
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_pass123
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_ORIGINAL=original-files
MINIO_BUCKET_ENCRYPTED=encrypted-files

# Consul
CONSUL_HOST=consul
CONSUL_PORT=8500

# Services Ports
AUTH_SERVICE_PORT=5001
FILE_INGESTION_SERVICE_PORT=5002
SOAP_SERVICE_PORT=5003
REST_SERVICE_PORT=5004
API_GATEWAY_PORT=5000
SPRING_VISUALIZER_PORT=8080
FRONTEND_PORT=3000

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# RSA Encryption (Base64 encoded keys - generate new ones for production!)
RSA_PUBLIC_KEY_PATH=/app/keys/public.pem
RSA_PRIVATE_KEY_PATH=/app/keys/private.pem
